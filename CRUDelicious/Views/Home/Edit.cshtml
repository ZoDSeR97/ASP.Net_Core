@{
    ViewData["Title"] = "Edit Page";
}
@model Dish
<div class="text-center">
    <h1 class="display-4">Edit @ViewBag.Dish.Name</h1>
    <p><a href="/">Home</a> | <a href="/dishes/new">Add a Dish</a></p>
</div>
<form asp-action="EditDish" method="post">
    <div class="row text-center">
        <div class="col">
            <div class="mb-3">
                <label asp-for="Chef"></label>
                <input type="text" asp-for="Chef" class="form-control" placeholder="w" value=@ViewBag.Dish.Chef>
                <span asp-validation-for="Chef"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" placeholder="w" value=@ViewBag.Dish.Name>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Calories"></label>
                <input type="number" asp-for="Calories" class="form-control" placeholder="w" value=@ViewBag.Dish.Calories>
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="col" value=@Model.Tastiness>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <div class="col">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="">@ViewBag.Dish.Description</textarea>
            <span asp-validation-for="Description"></span>
            <button type="submit" class="mt-3 float-end btn bg-primary shadow">Edit Dish</button>
        </div>
    </div>
</form>