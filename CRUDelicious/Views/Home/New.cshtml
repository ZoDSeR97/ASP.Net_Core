@{
    ViewData["Title"] = "New Dish Page";
}
@model Dish
<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <p><a href="/">Home</a> | Add a Dish</p>
</div>

<form asp-action="NewDish" method="post">
    <div class="row text-center">
        <div class="col">
            <div class="mb-3 form-floating">
                <input type="text" asp-for="Chef" class="form-control" placeholder="w">
                <label asp-for="Chef"></label>
                <span asp-validation-for="Chef"></span>
            </div>
            <div class="mb-3 form-floating">
                <input type="text" asp-for="Name" class="form-control" placeholder="w">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 form-floating">
                <input type="number" asp-for="Calories" class="form-control" placeholder="w">
                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col">
            <select asp-for="Tastiness" class="col">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <label asp-for="Tastiness"></label>
        </div>
        <div class="col form-floating">
            <textarea asp-for="Description" class="form-control" placeholder="w"></textarea>
            <label asp-for="Description"></label>
            <button type="submit" class="mt-3 float-end btn bg-primary shadow">Add Dish</button>
        </div>
    </div>
</form>