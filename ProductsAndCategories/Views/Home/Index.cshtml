@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="row">
    <div class="col">
        <p>Products</p>
        <form asp-action="AddProduct" method="post">
            <h1>New Products</h1>
            <div class="mb-3 form-floating">
                <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 form-floating">
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="mb-3 form-floating">
                <input type="number" step="any" asp-for="Price" class="form-control" placeholder="9.99">
                <label asp-for="Price"></label>
                <span asp-validation-for="Price"></span>
            </div>
            <button type="submit" class="btn bg-primary">Add Product</button>
        </form>
    </div>
    <div class="col">
        <a href="/categories">Categories</a>
        <h1>All Products</h1>
        @foreach (Product item in ViewBag.AllProducts){
            <p><a href="/products/@item.ProductId">@item.Name</a></p>
        }
    </div>
</div>